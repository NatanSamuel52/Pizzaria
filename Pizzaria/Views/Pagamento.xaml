<Window x:Class="Pizzaria.Views.Pagamento"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Pagamento - Pizzaria Fornalha"
        WindowStartupLocation="CenterScreen"
        Height="450" Width="650"
        Background="#1E1E1E">

    <Grid Margin="20">
        <Border Background="#2C2C2C" CornerRadius="15" Padding="20" BorderBrush="#FFB800" BorderThickness="2">
            <StackPanel VerticalAlignment="Center">

                <TextBlock Text="Escolha a forma de pagamento" 
                           FontSize="22" 
                           FontWeight="Bold" 
                           Foreground="#FFB800" 
                           HorizontalAlignment="Center" 
                           Margin="0,0,0,25"/>

                <StackPanel Margin="0,0,0,20">
                    <RadioButton x:Name="rbDinheiro" Content="💵 Dinheiro" 
                                 Foreground="White" FontSize="16" 
                                 Checked="rbDinheiro_Checked"/>
                    <RadioButton x:Name="rbCartao" Content="💳 Cartão" 
                                 Foreground="White" FontSize="16" Margin="0,5,0,0"/>
                    <RadioButton x:Name="rbPix" Content="⚡ Pix" 
                                 Foreground="White" FontSize="16" Margin="0,5,0,0"/>
                </StackPanel>

                <StackPanel x:Name="spTroco" Visibility="Collapsed">
                    <TextBlock Text="Troco para quanto?" 
                               Foreground="White" 
                               Margin="0,0,0,5"/>
                    <TextBox x:Name="txtTroco" Height="30" FontSize="14" />
                </StackPanel>

                <StackPanel Orientation="Horizontal" 
                            HorizontalAlignment="Center" 
                            Margin="0,40,0,0">
                    <Button Content="Confirmar Pedido" 
                            Width="160" Height="45" 
                            Background="#FFB800" 
                            Foreground="Black" 
                            FontWeight="Bold"
                            Click="ConfirmarPedido_Click"/>
                    <Button Content="Cancelar" 
                            Width="120" Height="45" 
                            Margin="15,0,0,0"
                            Background="#444"
                            Foreground="White"
                            Click="Cancelar_Click"/>
                </StackPanel>

            </StackPanel>
        </Border>
    </Grid>
</Window>
