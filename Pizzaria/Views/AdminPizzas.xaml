<Window x:Class="Pizzaria.Views.AdminPizzas"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Admin - Pizzaria Fornalha" Height="520" Width="800"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="12">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="350"/>
            <ColumnDefinition Width="12"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0">
            <TextBlock Text="Gerenciar Pizzas" FontSize="18" FontWeight="Bold" Margin="0,0,0,8"/>
            <TextBlock Text="Nome" />
            <TextBox x:Name="txtNomePizza"/>
            <TextBlock Text="Preço (R$)"/>
            <TextBox x:Name="txtPrecoPizza"/>
            <TextBlock Text="Categoria"/>
            <ComboBox x:Name="cbCategoriaPizza" SelectedIndex="0">
                <ComboBoxItem Content="Tradicional"/>
                <ComboBoxItem Content="Especial"/>
                <ComboBoxItem Content="Doce"/>
            </ComboBox>

            <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                <Button Content="Adicionar" Click="Adicionar_Click"/>
                <Button Content="Editar" Click="Editar_Click"/>
                <Button Content="Excluir" Click="Excluir_Click" Background="#FF3A3A3A"/>
            </StackPanel>
        </StackPanel>

        <DataGrid x:Name="dgPizzasAdmin" Grid.Column="2" AutoGenerateColumns="False" IsReadOnly="True" SelectionChanged="dgPizzasAdmin_SelectionChanged">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="60"/>
                <DataGridTextColumn Header="Nome" Binding="{Binding Nome}" Width="*"/>
                <DataGridTextColumn Header="Preço" Binding="{Binding Preco}" Width="120" StringFormat="R$ {0:F2}"/>
                <DataGridTextColumn Header="Categoria" Binding="{Binding Categoria}" Width="120"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
