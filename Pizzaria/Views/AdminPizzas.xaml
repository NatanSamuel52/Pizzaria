<Window x:Class="Pizzaria.Views.AdminPizzas"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Admin - Pizzaria Fornalha"
        Height="520" Width="800"
        WindowStartupLocation="CenterOwner">

    <Grid Margin="12">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="350"/>
            <ColumnDefinition Width="12"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0">
            <TextBlock Text="Gerenciar Pizzas" FontSize="18" FontWeight="Bold" Margin="0,0,0,8"/>
            <TextBlock Text="Nome:" Margin="0,4,0,0"/>
            <TextBox x:Name="txtNomePizza" Margin="0,0,0,6"/>
            <TextBlock Text="Preço (R$):" Margin="0,4,0,0"/>
            <TextBox x:Name="txtPrecoPizza" Margin="0,0,0,6"/>
            <TextBlock Text="Categoria:" Margin="0,4,0,0"/>
            <ComboBox x:Name="cbCategoriaPizza" SelectedIndex="0" Margin="0,0,0,10">
                <ComboBoxItem Content="Tradicional"/>
                <ComboBoxItem Content="Especial"/>
                <ComboBoxItem Content="Doce"/>
            </ComboBox>
            <StackPanel Orientation="Horizontal" Margin="0,8,0,0" HorizontalAlignment="Left">
                <Button Content="Adicionar" Width="90" Margin="0,0,6,0" Click="Adicionar_Click"/>
                <Button Content="Editar" Width="90" Margin="0,0,6,0" Click="Editar_Click"/>
                <Button Content="Excluir" Width="90" Click="Excluir_Click" Background="#FF3A3A3A" Foreground="White"/>
            </StackPanel>
        </StackPanel>

        <DataGrid x:Name="dgPizzasAdmin" Grid.Column="2" AutoGenerateColumns="False" IsReadOnly="True" SelectionChanged="dgPizzasAdmin_SelectionChanged">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="60"/>
                <DataGridTextColumn Header="Nome" Binding="{Binding Nome}" Width="*"/>
                <DataGridTextColumn Header="Preço" Binding="{Binding Preco, StringFormat={}{0:C2}}" Width="120"/>
                <DataGridTextColumn Header="Categoria" Binding="{Binding Categoria}" Width="120"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
