<Window x:Class="Pizzaria.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Pizzaria Fornalha" Height="380" Width="600"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid Margin="20">
        <Border CornerRadius="10" Background="#FF171717" Padding="20">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="🍕 Pizzaria Fornalha" FontSize="28" FontWeight="Bold" 
                           Foreground="{StaticResource AccentBrush}" HorizontalAlignment="Center"/>
                <TextBlock Text="Bem-vindo — escolha uma opção" Margin="0,10,0,20"
                           Foreground="{StaticResource SecondaryTextBrush}" HorizontalAlignment="Center"/>

                <StackPanel Orientation="Vertical" Width="260">
                    <Button Content="Área do Cliente" Height="44" Click="AbrirClientes_Click"/>
                    <Button Content="Área do Administrador" Height="44" Click="AbrirAdmin_Click"/>
                    <Button Content="Sair" Height="44" Background="#FF3A3A3A" Click="Sair_Click"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Window>
