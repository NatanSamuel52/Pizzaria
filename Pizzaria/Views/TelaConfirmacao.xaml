<Window x:Class="Pizzaria.Views.TelaConfirmacao"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Confirmação do Pedido - Pizzaria Fornalha"
        WindowStartupLocation="CenterScreen"
        Height="400" Width="650"
        Background="#1E1E1E">

    <Grid Margin="20">
        <Border CornerRadius="15" Padding="25" Background="#2C2C2C" BorderBrush="#FFB800" BorderThickness="2">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">

                <TextBlock Text="🍕 Pedido Confirmado!" 
                           FontSize="28" 
                           FontWeight="Bold" 
                           Foreground="#FFB800" 
                           TextAlignment="Center"/>

                <TextBlock x:Name="txtMensagem" 
                           Text="Seu pedido foi realizado com sucesso!" 
                           FontSize="16" 
                           Foreground="White" 
                           TextAlignment="Center" 
                           Margin="0,15,0,10"/>

                <TextBlock x:Name="txtTempoEntrega" 
                           FontSize="18" 
                           FontWeight="Bold" 
                           Foreground="#FFA500" 
                           TextAlignment="Center" 
                           Margin="0,10,0,10"/>

                <TextBlock Text="Agradecemos por pedir na Pizzaria Fornalha!" 
                           FontSize="14" 
                           Foreground="LightGray" 
                           TextAlignment="Center" 
                           Margin="0,20,0,30"/>

                <Button Content="Fechar" 
                        Width="120" Height="40"
                        Background="#FFB800" 
                        Foreground="Black" 
                        FontWeight="Bold"
                        BorderThickness="0"
                        Cursor="Hand"
                        Click="Fechar_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
