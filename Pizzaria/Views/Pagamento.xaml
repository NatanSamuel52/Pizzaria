<Window x:Class="Pizzaria.Views.Pagamento"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Forma de Pagamento - Pizzaria Fornalha"
        Height="400" Width="500"
        WindowStartupLocation="CenterOwner"
        Background="#FF171717">

    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="Escolha a forma de pagamento"
                       FontSize="20" FontWeight="Bold"
                       Foreground="White" Margin="0,0,0,20"
                       HorizontalAlignment="Center"/>

            <StackPanel Margin="0,0,0,10">
                <RadioButton x:Name="rbDinheiro" Content="💵 Dinheiro" GroupName="Pagamento" FontSize="16" Foreground="White" Margin="0,0,0,10" Checked="rbDinheiro_Checked"/>
                <RadioButton x:Name="rbCartao" Content="💳 Cartão" GroupName="Pagamento" FontSize="16" Foreground="White" Margin="0,0,0,10"/>
                <RadioButton x:Name="rbPix" Content="⚡ Pix" GroupName="Pagamento" FontSize="16" Foreground="White"/>
            </StackPanel>

            <StackPanel x:Name="spTroco" Visibility="Collapsed">
                <TextBlock Text="Troco para quanto?" Foreground="White" Margin="0,10,0,4"/>
                <TextBox x:Name="txtTroco" Width="150"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,30,0,0">
                <Button Content="Confirmar Pedido" Width="160" Height="40" Margin="0,0,10,0" Click="ConfirmarPedido_Click"/>
                <Button Content="Cancelar" Width="100" Height="40" Background="#FF3A3A3A" Click="Cancelar_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
